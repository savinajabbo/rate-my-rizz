import openai

response = openai.ChatCompletion.create(
    model="gpt-4o-mini",
    messages=[
        {
            "role": "system",
            "content": "You roast people based on their flirting microexpressions."
        },
        {
            "role": "user",
            "content": "Here are the metrics {metrics.json}. Roast them."
        }
    ]
)

roast = response["choices"][0]["message"]["content"]